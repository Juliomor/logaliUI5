<mvc:View controllerName="alight.Employee.controller.MainView"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" displayBlock="true">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox >
                            <Label id = "labelEmployee" text="{i18n>labelEmployee}" class = "sapUiSmallMargin" labelFor="inputEmployee"/>
                            <Input id = "inputEmployee" value = "{jsonCountries>/EmployeeId}" maxLength="6" width="200px" class = "sapUiSmallMarginEnd"/>
                            <Label id = "labelCountry" text="{i18n>labelCountry}" class = "sapUiSmallMargin" labelFor="slCountry"/>
                            <Select id = "slCountry" selectedKey="{jsonCountries>/CountryKey}" forceSelection="false" items = "{jsonCountries>/ListCountry}" class = "sapUiSmallMarginEnd">
                                <items>
                                    <core:Item key = "{jsonCountries>Key}" text = "{jsonCountries>Text}" />
                                </items>
                            </Select>
                            <Button id = "btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onPressFilter" class = "sapUiSmallMarginEnd"/>
                            <Button id = "btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onPressClearFilter" class = "sapUiSmallMarginEnd"/>
                        </HBox>
                        <Button id = "btnShowCity" text="{i18n>showCity}" visible = "{jsonConfig>/visibleBtnShowCity}" press="onShowCity" class = "sapUiSmallMarginBegin"/>
                        <Button id = "btnHideCity" text="{i18n>hideCity}" visible = "{jsonConfig>/visibleBtnHideCity}" press="onHideCity" class = "sapUiSmallMarginBegin"/>
                        <HBox>
                            <Panel>
                                <Table id = "tableEmployee" items = "{jsonEmployees>/Employees}">
                                    <columns>
                                        <Column >
                                            <header>
                                                <Label text = "{i18n>tableId}" />
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text = "{i18n>tableName}" />
                                            </header>
                                        </Column>
                                        <Column >
                                            <header>
                                                <Label text = "{i18n>tableCountry}" />
                                            </header>
                                        </Column>
                                        <Column visible = "{jsonConfig>/visibleCity}">
                                            <header>
                                                <Label text = "{i18n>tableCity}" />
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="onPressListItem">
                                            <cells>
                                                <Label text = "{jsonEmployees>EmployeeID}"/>
                                                <Label text = "{jsonEmployees>FirstName} {jsonEmployees>LastName}"/>
                                                <Label text = "{jsonEmployees>Country}"/>
                                                <Label text = "{jsonEmployees>City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
